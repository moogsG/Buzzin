<form class="form-inline my-2 my-lg-0" id="register_form" action="/users/register" method="POST">
    <label for="username"></label>
    <input class="form-control mr-sm-2" id="username" type="username" name="username" placeholder="Wiki">
    <label for="email"></label>
    <input class="form-control mr-sm-2" id="email" type="email" name="email" placeholder="moogs@wikimap.ca">
    <label for="password"></label>
    <input class="form-control mr-sm-2" id="password" type="password" name="password" placeholder="******">
    <input id="register" type="submit" class="btn btn-info my-2 my-sm-0" value="Submit">
</form>
